{
    "swagger": "2.0",
    "info": {
        "description": "Service for managing university structure hierarchy",
        "title": "Structure Service API",
        "contact": {},
        "version": "1.0"
    },
    "basePath": "/",
    "paths": {
        "/import/excel": {
            "post": {
                "description": "Импортирует структуру вуза из Excel файла",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "import"
                ],
                "summary": "Импортировать структуру из Excel",
                "parameters": [
                    {
                        "type": "file",
                        "description": "Excel файл со структурой",
                        "name": "file",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/universities": {
            "get": {
                "description": "Возвращает список всех вузов",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "universities"
                ],
                "summary": "Получить все вузы",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/domain.University"
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "Создает новый вуз",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "universities"
                ],
                "summary": "Создать вуз",
                "parameters": [
                    {
                        "description": "Данные вуза",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/domain.University"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/domain.University"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/universities/{id}": {
            "get": {
                "description": "Возвращает информацию о вузе",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "universities"
                ],
                "summary": "Получить вуз по ID",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID вуза",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/domain.University"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/universities/{university_id}/structure": {
            "get": {
                "description": "Возвращает иерархическую структуру вуза (университет -\u003e филиал -\u003e факультет -\u003e группа -\u003e чат)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "structure"
                ],
                "summary": "Получить структуру вуза",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID вуза",
                        "name": "university_id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/domain.StructureNode"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "domain.Chat": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "max_id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            }
        },
        "domain.StructureNode": {
            "type": "object",
            "properties": {
                "chat": {
                    "$ref": "#/definitions/domain.Chat"
                },
                "children": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/domain.StructureNode"
                    }
                },
                "course": {
                    "type": "integer"
                },
                "group_num": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "type": {
                    "description": "\"university\", \"branch\", \"faculty\", \"group\"",
                    "type": "string"
                }
            }
        },
        "domain.University": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "foiv": {
                    "description": "ФОИВ",
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "inn": {
                    "type": "string"
                },
                "kpp": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        }
    }
}