{
    "schemes": [
        "http",
        "https"
    ],
    "swagger": "2.0",
    "info": {
        "description": "Сервис управления групповыми чатами для мини-приложения",
        "title": "Chat Service API",
        "contact": {},
        "version": "1.0"
    },
    "basePath": "/",
    "paths": {
        "/administrators/{admin_id}": {
            "delete": {
                "description": "Удаляет администратора из чата. Нельзя удалить последнего администратора (должно быть минимум 2)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "administrators"
                ],
                "summary": "Удалить администратора из чата",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID администратора",
                        "name": "admin_id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/http.DeleteResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "409": {
                        "description": "Conflict",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/chats": {
            "get": {
                "description": "Выполняет поиск чатов по названию с учетом роли пользователя",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "chats"
                ],
                "summary": "Поиск чатов",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Bearer token",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Поисковый запрос (название чата)",
                        "name": "query",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "Лимит результатов (по умолчанию 50, максимум 100)",
                        "name": "limit",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "Смещение для пагинации",
                        "name": "offset",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/http.ChatListResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "post": {
                "description": "Создает новый чат",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "chats"
                ],
                "summary": "Создать чат",
                "parameters": [
                    {
                        "description": "Данные чата",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/http.CreateChatRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/http.Chat"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/chats/all": {
            "get": {
                "description": "Возвращает список всех чатов с пагинацией (с учетом роли пользователя)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "chats"
                ],
                "summary": "Получить все чаты",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Bearer token",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "Лимит результатов (по умолчанию 50, максимум 100)",
                        "name": "limit",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "Смещение для пагинации",
                        "name": "offset",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/http.ChatListResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/chats/{chat_id}/administrators": {
            "post": {
                "description": "Добавляет нового администратора к чату по номеру телефона",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "administrators"
                ],
                "summary": "Добавить администратора к чату",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID чата",
                        "name": "chat_id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Данные администратора",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/http.AddAdministratorRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/http.Administrator"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "409": {
                        "description": "Conflict",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/chats/{id}": {
            "get": {
                "description": "Возвращает информацию о чате по его ID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "chats"
                ],
                "summary": "Получить чат по ID",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID чата",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/http.Chat"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "domain.Administrator": {
            "type": "object",
            "properties": {
                "add_admin": {
                    "description": "Может ли добавлять администраторов",
                    "type": "boolean"
                },
                "add_user": {
                    "description": "Может ли добавлять пользователей",
                    "type": "boolean"
                },
                "chat_id": {
                    "type": "integer"
                },
                "created_at": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "max_id": {
                    "description": "MAX_id администратора",
                    "type": "string"
                },
                "phone": {
                    "description": "Номер телефона администратора",
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "domain.University": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "inn": {
                    "type": "string"
                },
                "kpp": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "http.AddAdministratorRequest": {
            "type": "object",
            "required": [
                "phone"
            ],
            "properties": {
                "add_admin": {
                    "type": "boolean",
                    "example": true
                },
                "add_user": {
                    "type": "boolean",
                    "example": true
                },
                "max_id": {
                    "type": "string",
                    "example": "496728250"
                },
                "phone": {
                    "type": "string",
                    "example": "+79001234567"
                }
            }
        },
        "http.Administrator": {
            "type": "object",
            "properties": {
                "add_admin": {
                    "description": "Может ли добавлять администраторов",
                    "type": "boolean"
                },
                "add_user": {
                    "description": "Может ли добавлять пользователей",
                    "type": "boolean"
                },
                "chat_id": {
                    "type": "integer"
                },
                "created_at": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "max_id": {
                    "description": "MAX_id администратора",
                    "type": "string"
                },
                "phone": {
                    "description": "Номер телефона администратора",
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "http.Chat": {
            "type": "object",
            "properties": {
                "administrators": {
                    "description": "Администраторы чата",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/domain.Administrator"
                    }
                },
                "created_at": {
                    "type": "string"
                },
                "department": {
                    "description": "Подразделение вуза",
                    "type": "string"
                },
                "external_chat_id": {
                    "description": "ID чата из внешней системы (Excel)",
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "max_chat_id": {
                    "description": "ID чата в MAX",
                    "type": "string"
                },
                "name": {
                    "description": "Название чата",
                    "type": "string"
                },
                "participants_count": {
                    "description": "Количество участников",
                    "type": "integer"
                },
                "source": {
                    "description": "Источник: \"admin_panel\", \"bot_registrar\", \"academic_group\"",
                    "type": "string"
                },
                "university": {
                    "description": "Вуз (для суперадмина)",
                    "allOf": [
                        {
                            "$ref": "#/definitions/domain.University"
                        }
                    ]
                },
                "university_id": {
                    "description": "ID вуза (опционально)",
                    "type": "integer"
                },
                "updated_at": {
                    "type": "string"
                },
                "url": {
                    "description": "Ссылка на чат",
                    "type": "string"
                }
            }
        },
        "http.ChatListResponse": {
            "type": "object",
            "properties": {
                "chats": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/http.Chat"
                    }
                },
                "limit": {
                    "type": "integer"
                },
                "offset": {
                    "type": "integer"
                },
                "total_count": {
                    "type": "integer"
                }
            }
        },
        "http.CreateChatRequest": {
            "type": "object",
            "required": [
                "name",
                "source",
                "url"
            ],
            "properties": {
                "branch_id": {
                    "type": "integer"
                },
                "department": {
                    "type": "string"
                },
                "external_chat_id": {
                    "type": "string"
                },
                "faculty_id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "participants_count": {
                    "type": "integer"
                },
                "source": {
                    "type": "string"
                },
                "university_id": {
                    "type": "integer"
                },
                "url": {
                    "type": "string"
                }
            }
        },
        "http.DeleteResponse": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "example": "deleted"
                }
            }
        }
    }
}